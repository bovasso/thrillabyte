<!DOCTYPE html>
	<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
	<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
	<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
	<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
	<!--[if gt IE 8]><!--> <html lang="en"> <!--<![endif]-->
	<head>
		<meta charset="utf-8" />
	
		<!-- Set the viewport width to device width for mobile -->
		<meta name="viewport" content="width=device-width" />
	
		<title>Intel StoryPlay</title>
  
		<!-- Included CSS Files -->
		<link rel="stylesheet" href="{{ asset('bundles/thrillabyteapp/css/foundation.css') }}">
		<link rel="stylesheet" href="{{ asset('bundles/thrillabyteapp/css/app.css') }}">

		<!--[if lt IE 9]>
			<link rel="stylesheet" href="{{ asset('bundles/thrillabyteapp/css/ie.css') }}">
		<![endif]-->

	
		<!-- IE Fix for HTML5 Tags -->
		<!--[if lt IE 9]>
			<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		
	</head>

	<body>
		
			<div id="toolbar" class="container">
			    <div class="row">
			      <div class="four columns">
			        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	                {{ 'User: '|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
	                <a href="{{ path('fos_user_security_logout') }}" class="small red nice button">
	                    {{ 'Logout'|trans({}, 'FOSUserBundle') }}
	                </a>
	            {% else %}
	                <a href="{{ path('fos_user_security_login') }}" class="small blue nice button">{{ 'Sign In'|trans({}, 'FOSUserBundle') }}</a>
	            {% endif %}
			      </div>
			      <div id="settings" class="eight columns hide-on-phones">
								{{ knp_menu_render('ThrillabyteAppBundle:MainMenu:mainMenu') }}
			      </div>
			    </div>
			  </div>
			<!-- container -->
			<div id="main" class="container">	
				
				<div class="row">

	        {% for key, message in app.session.getFlashes() %}
	        <div class="{{ key }}">
	            {{ message|trans({}, 'FOSUserBundle') }}
	        </div>
	        {% endfor %}

	
				{% block content %}		
					{% block fos_user_content %}
	        {% endblock fos_user_content %}
				{% endblock %}	
				</div>
				
			</div>

			
			<!-- Included JS Files -->
			<script src="{{ asset('/bundles/thrillabyteapp/js/foundation.js') }}"></script>
			<script src="{{ asset('/bundles/thrillabyteapp/js/app.js') }}"></script>

	</body>

</html>
